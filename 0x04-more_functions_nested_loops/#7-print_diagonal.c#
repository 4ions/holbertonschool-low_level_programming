/**
 *print_diagonal - print a diagonal in terminal
 *@n: numbers of times the character / should be printed
 *Return: No return
 */
void print_diagonal(int n)
{
int i, j;
 nt i, j;

 if(n > 0)

   {

     for(j = 0; j <= n; j++)

       {

	 for (i = 1; i <= n; i++)

	   {

	     _putchar(32);

	     if (i == n)

	       {

		 _putchar(92);

	       }

	     

